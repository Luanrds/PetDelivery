{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information", // Útil para ver quando os Hosted Services iniciam/param
      "Infraestrutura.Servicos": "Debug" // Logs mais detalhados dos nossos serviços
    }
  },
  // ... outras configs ...
